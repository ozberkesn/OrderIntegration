
@{
    ViewData["Title"] = "Bekleyen Siparişler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<OrderViewModel>

<div class="row">
    <div class="col-md-12">

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Bekleyen Siparişler</h5>
                @if (Model.Any())
                {
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Tarih</th>
                                <th>Alıcı</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model)
                            {
                                <tr class="order-record" data-id="@order.Id">
                                    <td>@order.CreatedDate.ToString("dd.MM.yyyy HH:mm")</td>
                                    <td>@order.ReceiverName</td>
                                    <td>
                                        <a onclick="orderDelivered(@order.Id)" class="btn btn-success btn-sm">Teslim Edildi</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-info">
                        Kayıtlı Sipariş bulunamadı
                    </div>
                }
            </div>
        </div>
    </div>
</div>
